{% extends 'base.html.twig' %}

{% block title %}Register | BattleScribe{% endblock %}

{% block body %}
    <div class="bs-card mx-auto" style="max-width: 500px;">
        <h1 class="mb-4">Create an account</h1>
        {% if form_error is defined %}
            <div class="alert flash-error mb-4">
                {{ form_error }}
            </div>
        {% endif %}
        <form method="post" action="{{ path('app_register') }}" class="bs-form">
            <label for="registerEmail">Email</label>
            <input type="email" id="registerEmail" name="email" value="{{ last_email|default('') }}" required autocomplete="email">

            <label for="registerPassword">Password</label>
            <input type="password" id="registerPassword" name="password" required minlength="8" autocomplete="new-password">

            <button class="bs-btn w-100" type="submit">Sign up</button>
        </form>
        <div class="auth-meta">
            Already have an account? <a href="{{ path('app_login') }}" class="link-light">Log in</a>
        </div>
    </div>
{% endblock %}

