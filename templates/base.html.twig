<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BattleScribe{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>bs</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha256-1sxSdF7pUwrZ1nPStFofMEFOu819EXatQq2Tw8p37uQ=" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="bs-body">
        <header class="bs-header shadow-sm">
            <div class="container-fluid d-flex align-items-center justify-content-between py-3 px-3 px-md-4">
                <a class="brand text-uppercase fw-bold letter-spacing nav-link p-0" href="{{ path('app_landing') }}">BattleScribe</a>
                <nav class="nav gap-3">
                    {% if app.user %}
                        <a href="{{ path('app_dashboard') }}" class="nav-link {{ app.request.get('_route') in ['app_dashboard', 'app_faction_divisions', 'app_division_slots', 'app_unit_template_form'] ? 'active' : '' }}">Dashboard</a>
                        <a href="{{ path('app_me') }}" class="nav-link">API Profile</a>
                        <a href="{{ path('app_logout') }}" class="nav-link">Logout</a>
                    {% else %}
                        <a href="{{ path('app_landing') }}" class="nav-link {{ app.request.get('_route') == 'app_landing' ? 'active' : '' }}">Landing</a>
                        <a href="{{ path('app_login') }}" class="nav-link {{ app.request.get('_route') starts with 'app_login' ? 'active' }}">Login</a>
                        <a href="{{ path('app_register_form') }}" class="nav-link {{ app.request.get('_route') starts with 'app_register' ? 'active' }}">Register</a>
                    {% endif %}
                </nav>
            </div>
        </header>
        <main class="container bs-main py-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert mb-3 flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-3gJwYp4xfN/0y9VOGQsv5nYeD5wlaQt1zArKeQw3hTU=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha256-axhqhzyapMI2vlA38nSxrdbidKfnUSsfx8bVsgcuyo4=" crossorigin="anonymous"></script>
        <script src="{{ asset('js/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
